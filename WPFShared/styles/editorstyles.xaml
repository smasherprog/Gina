<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style
		x:Key="{x:Type TextBox}"
		TargetType="{x:Type TextBox}">
		<Setter
			Property="Height"
			Value="20" />
		<Setter
			Property="Padding"
			Value="0" />
		<Setter
			Property="Margin"
			Value="0 2" />
		<Setter
			Property="HorizontalAlignment"
			Value="Stretch" />
		<Setter
			Property="VerticalAlignment"
			Value="Bottom" />
		<Setter
			Property="FontSize"
			Value="12" />
	</Style>
	<Style
		x:Key="{x:Type CheckBox}"
		TargetType="{x:Type CheckBox}">
		<Setter
			Property="Margin"
			Value="0 0 4 0" />
		<Setter
			Property="Height"
			Value="20" />
	</Style>
	<Style
		x:Key="{x:Type Label}"
		TargetType="{x:Type Label}">
		<Setter
			Property="VerticalAlignment"
			Value="Bottom" />
		<Setter
			Property="VerticalContentAlignment"
			Value="Bottom" />
		<Setter
			Property="Height"
			Value="20" />
		<Setter
			Property="Margin"
			Value="0 2" />
		<Setter
			Property="Padding"
			Value="0" />
		<Setter
			Property="FontSize"
			Value="12" />
	</Style>
	<Style
		x:Key="{x:Type GroupBox}"
		TargetType="{x:Type GroupBox}">
		<Setter
			Property="BorderThickness"
			Value="1" />
		<Setter
			Property="BorderBrush"
			Value="#FF444444" />
		<Setter
			Property="Padding"
			Value="5 3" />
	</Style>
	<Style
		x:Key="{x:Type RadioButton}"
		TargetType="{x:Type RadioButton}">
		<Setter
			Property="FontSize"
			Value="12" />
	</Style>
	<Style
		x:Key="{x:Type Slider}"
		TargetType="{x:Type Slider}">
		<Setter
			Property="HorizontalAlignment"
			Value="Left" />
		<Setter
			Property="Height"
			Value="18" />
	</Style>
	<Style
		x:Key="{x:Type ComboBox}"
		TargetType="{x:Type ComboBox}">
		<Setter
			Property="Height"
			Value="20" />
		<Setter
			Property="FontSize"
			Value="12" />
		<Setter
			Property="HorizontalAlignment"
			Value="Left" />
	</Style>
	<Style
		x:Key="{x:Type TabControl}"
		TargetType="{x:Type TabControl}">
		<Setter
			Property="Background"
			Value="#00FFFFFF" />
		<Setter
			Property="Padding"
			Value="10 5" />
	</Style>
	<Style
		x:Key="{x:Type StackPanel}"
		TargetType="{x:Type StackPanel}">
		<Setter
			Property="Margin"
			Value="0 5 0 0" />
	</Style>
	<Style
		x:Key="{x:Type Grid}"
		TargetType="{x:Type Grid}">
		<Setter
			Property="VerticalAlignment"
			Value="Top" />
	</Style>
	<Style
		x:Key="{x:Type Button}"
		TargetType="{x:Type Button}">
		<Setter
			Property="FontSize"
			Value="13" />
	</Style>
</ResourceDictionary>
