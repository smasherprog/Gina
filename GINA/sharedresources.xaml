<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary
			Source="pack://application:,,,/WPFShared;component/SharedResources.xaml" />
	</ResourceDictionary.MergedDictionaries>
	<Style
		x:Key="TriggerGroupTooltip"
		TargetType="{x:Type ToolTip}">
		<Setter
			Property="UIElement.SnapsToDevicePixels"
			Value="True" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type ToolTip}">
					<Border
						BorderBrush="#888888"
						BorderThickness="1"
						SnapsToDevicePixels="True">
						<Border
							Width="Auto"
							Height="Auto"
							BorderBrush="#111111"
							BorderThickness="1"
							SnapsToDevicePixels="True"
							CornerRadius="0"
							Background="#C0D4EE"
							Margin="0"
							Padding="6 3">
							<Grid
								MaxWidth="300">
								<FrameworkElement.Resources>
									<ResourceDictionary>
										<Style
											x:Key="{x:Type TextBlock}"
											TargetType="{x:Type TextBlock}">
											<Setter
												Property="TextWrapping"
												Value="Wrap" />
											<Setter
												Property="Foreground"
												Value="#222222" />
											<Setter
												Property="FontSize"
												Value="12" />
											<Setter
												Property="Height"
												Value="Auto" />
										</Style>
									</ResourceDictionary>
								</FrameworkElement.Resources>
								<Grid.RowDefinitions>
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
								</Grid.RowDefinitions>
								<TextBlock
									Text="Comments"
									Foreground="#FF8B0000"
									FontWeight="Bold"
									Grid.Row="0"
									Visibility="{Binding Path=Comments, Converter={StaticResource ConverterStringNullOrEmptyToVisibility}}" />
								<TextBlock
									Grid.Row="1"
									Text="{Binding Path=Comments}"
									Visibility="{Binding Path=Comments, Converter={StaticResource ConverterStringNullOrEmptyToVisibility}}" />
								<StackPanel
									Height="15"
									Grid.Row="2"
									Visibility="{Binding Path=Comments, Converter={StaticResource ConverterStringNullOrEmptyToVisibility}}" />
								<StackPanel
									Grid.Row="3">
									<TextBlock
										FontWeight="Bold"
										Foreground="#FFFF0000"
										Text="This group is not enabled for any characters."
										Visibility="{Binding Path=EnabledCharacters, ConverterParameter=collapsed, Converter={StaticResource ConverterEmptyCollectionToVisibility}}" />
									<TextBlock
										FontWeight="Bold"
										Foreground="#FF8B0000"
										Text="This group is enabled for:"
										Visibility="{Binding Path=EnabledCharacters, Converter={StaticResource ConverterEmptyCollectionToVisibility}}" />
									<ListView
										Margin="0 5 0 0"
										ItemsSource="{Binding Path=EnabledCharacters}"
										Visibility="{Binding Path=EnabledCharacters, Converter={StaticResource ConverterEmptyCollectionToVisibility}}">
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<TextBlock
													Text="{Binding Path=DisplayName}" />
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ListView>
								</StackPanel>
							</Grid>
						</Border>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style
		x:Key="TriggerTooltip"
		TargetType="{x:Type ToolTip}">
		<Setter
			Property="UIElement.SnapsToDevicePixels"
			Value="True" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type ToolTip}">
					<Border
						BorderBrush="#888888"
						BorderThickness="1"
						SnapsToDevicePixels="True">
						<Border
							Width="Auto"
							Height="Auto"
							BorderBrush="#111111"
							BorderThickness="1"
							SnapsToDevicePixels="True"
							CornerRadius="0"
							Background="#C0D4EE"
							Margin="0"
							Padding="6 3">
							<Grid
								MaxWidth="300">
								<FrameworkElement.Resources>
									<ResourceDictionary>
										<Style
											x:Key="{x:Type TextBlock}"
											TargetType="{x:Type TextBlock}">
											<Setter
												Property="TextWrapping"
												Value="Wrap" />
											<Setter
												Property="Foreground"
												Value="#222222" />
											<Setter
												Property="FontSize"
												Value="12" />
											<Setter
												Property="Height"
												Value="Auto" />
										</Style>
									</ResourceDictionary>
								</FrameworkElement.Resources>
								<Grid.RowDefinitions>
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="15" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
								</Grid.RowDefinitions>
								<TextBlock
									Text="Search Text"
									Foreground="#FF8B0000"
									FontWeight="Bold"
									Grid.Row="0" />
								<TextBlock
									Grid.Row="1"
									Text="{Binding Path=TriggerText}" />
								<StackPanel
									Height="15"
									Grid.Row="2"
									Visibility="{Binding Path=Comments, Converter={StaticResource ConverterStringNullOrEmptyToVisibility}}" />
								<TextBlock
									Text="Comments"
									Foreground="#FF8B0000"
									FontWeight="Bold"
									Grid.Row="3"
									Visibility="{Binding Path=Comments, Converter={StaticResource ConverterStringNullOrEmptyToVisibility}}" />
								<TextBlock
									Grid.Row="4"
									Text="{Binding Path=Comments}"
									Visibility="{Binding Path=Comments, Converter={StaticResource ConverterStringNullOrEmptyToVisibility}}" />
								<TextBlock
									Text="Trigger Path"
									Foreground="#FF8B0000"
									FontWeight="Bold"
									Grid.Row="6" />
								<ItemsControl
									Grid.Row="7"
									ItemsSource="{Binding Path=GroupPath}">
									<ItemsControl.ItemTemplate>
										<DataTemplate>
											<FrameworkTemplate.Resources>
												<ResourceDictionary>
													<Style
														x:Key="{x:Type TextBlock}"
														TargetType="{x:Type TextBlock}">
														<Setter
															Property="TextWrapping"
															Value="Wrap" />
														<Setter
															Property="Foreground"
															Value="#222222" />
														<Setter
															Property="FontSize"
															Value="12" />
														<Setter
															Property="Height"
															Value="Auto" />
													</Style>
												</ResourceDictionary>
											</FrameworkTemplate.Resources>
											<TextBlock
												Text="{Binding Path=Name}" />
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</Grid>
						</Border>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
